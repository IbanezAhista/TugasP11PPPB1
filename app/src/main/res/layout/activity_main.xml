<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#7a2f36"
    android:gravity="center">

    <TextView
        android:id="@+id/txt_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:text="Apakah Anda suka konten ini?"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/ic_good"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_thumb_up_alt_24"/>

        <TextView
            android:id="@+id/txt_100"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:text="100"/>

        <ImageView
            android:id="@+id/ic_bad"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_thumb_down_alt_24"
            android:layout_marginStart="60dp"/>

        <TextView
            android:id="@+id/txt_10"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:text="10"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_notif"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Kirim Notifikasi"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#7a2f36"
        android:layout_marginTop="100dp"/>

</LinearLayout>